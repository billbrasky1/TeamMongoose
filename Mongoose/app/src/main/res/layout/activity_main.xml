<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context="com.danielbrinker.android.aca.mongoose.MainActivity"
                android:background="@color/material_deep_teal_200">
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context="com.danielbrinker.android.aca.mongoose.MainActivity"
                android:background="#a5f1ea">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".5">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/nameText"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:hint="Name"
                android:textColor="#000000"
                android:textColorHint="#065750"
                android:backgroundTint="#065750" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:ems="10"
                android:id="@+id/phoneText"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:hint="Phone Number"
                android:textColor="#000000"
                android:textColorHint="#065750"
                android:backgroundTint="#065750"
                android:phoneNumber="false" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPostalAddress"
                android:ems="10"
                android:id="@+id/addressText"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:hint="Address"
                android:textColor="#000000"
                android:textColorHint="#065750"
                android:backgroundTint="#065750"
                android:typeface="sans" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".5">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:id="@+id/displayButton"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="#ffffff"
                android:textColor="#088b7f"
                android:layout_marginTop="5dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/userInput"
                android:layout_centerVertical="true"
                android:layout_below="@id/displayButton"
                android:layout_centerHorizontal="true"
                android:textSize="17sp"
                android:layout_marginTop="10dp"
                android:textColor="#065750" />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mapButton"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:src="@drawable/maps"
                android:adjustViewBounds="false"
                android:onClick="processClicks"
                android:background="@android:color/white" />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/extraButton"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/phone"
                android:onClick="processClicks"
                android:background="@android:color/white"
                android:cropToPadding="false" />
      </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
